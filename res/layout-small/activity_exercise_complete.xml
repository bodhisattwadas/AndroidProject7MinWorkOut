
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bgcolor_gray"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageProgress"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:src="@drawable/prog_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="REST"
            android:textColor="@color/deep_green_header_footer"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Exercise: "
            android:textColor="@color/deep_green_header_footer"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/textViewNextExName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="@string/exName02"
            android:textColor="@color/deep_green_header_footer"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageExercise"
            android:layout_width="74dp"
            android:layout_height="76dp"
            android:src="@drawable/im2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_black"
            android:gravity="center" >

            <RelativeLayout
                android:id="@+id/layoutProgressBar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" >

                <ProgressBar
                    android:id="@+id/progressBarToday"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:max="10"
                    android:progress="2"
                    android:progressDrawable="@drawable/circular_progress_bar" />

                <TextView
                    android:id="@+id/textViewToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:textColor="@color/deep_green_header_footer"
                    android:textSize="35sp"
                    android:textStyle="bold" />

	</RelativeLayout>

        </LinearLayout>

    </LinearLayout>
