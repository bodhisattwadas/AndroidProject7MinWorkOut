<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bgcolor_gray"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageProgress"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:src="@drawable/prog_1" />

        <TextView
            android:id="@+id/textViewExName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exName01"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/deep_green_header_footer"
            android:textSize="40sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageExercise"
            android:layout_width="match_parent"
            android:layout_height="552dp"
            android:src="@drawable/im1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_black"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Up:"
                android:textColor="#fff"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewNextExName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exName02"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />
            <RelativeLayout
                android:id="@+id/layoutProgressBar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" >

                <ProgressBar
                    android:id="@+id/progressBarToday"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:max="30"
                    android:progress="10"
                    android:progressDrawable="@drawable/circular_progress_bar" />

                <TextView
                    android:id="@+id/textViewToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:textColor="@color/deep_green_header_footer"
                    android:textSize="35sp"
                    android:textStyle="bold" />

	</RelativeLayout>

        </LinearLayout>

    </LinearLayout>
